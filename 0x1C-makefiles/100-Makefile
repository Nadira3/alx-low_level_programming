SRC = main.c school.c
CC = gcc
NAME = school
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

all : prog

prog :  ifdef ERROR1
$(error m.h is missing)
endif
	$(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY : clean oclean fclean

clean :
	$(RM) -f *~ $(NAME)

oclean : 
	$(RM) -f $(OBJ)

fclean : clean oclean

re : oclean all
